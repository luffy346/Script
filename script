local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Main GUI
local gui = Instance.new("ScreenGui")
gui.Name = "KrnlOnlyGUI"
gui.ResetOnSpawn = false
gui.IgnoreGuiInset = true
gui.Parent = player:WaitForChild("PlayerGui")

-- Main Frame (Rounded Box)
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 500, 0, 230)
frame.Position = UDim2.new(0.5, -250, 0.5, -115)
frame.BackgroundColor3 = Color3.fromRGB(255, 255, 255)
frame.BackgroundTransparency = 0
frame.BorderSizePixel = 0
frame.AnchorPoint = Vector2.new(0.5, 0.5)
frame.Parent = gui

-- Corner rounding
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0, 15)
corner.Parent = frame

-- Shadow effect
local shadow = Instance.new("ImageLabel")
shadow.Name = "Shadow"
shadow.BackgroundTransparency = 1
shadow.Size = UDim2.new(1, 30, 1, 30)
shadow.Position = UDim2.new(0, -15, 0, -15)
shadow.Image = "rbxassetid://1316045217"
shadow.ImageTransparency = 0.5
shadow.ScaleType = Enum.ScaleType.Slice
shadow.SliceCenter = Rect.new(10, 10, 118, 118)
shadow.Parent = frame

-- Text Label
local textLabel = Instance.new("TextLabel")
textLabel.Size = UDim2.new(1, -40, 0, 150)
textLabel.Position = UDim2.new(0, 20, 0, 20)
textLabel.BackgroundTransparency = 1
textLabel.Font = Enum.Font.SourceSans
textLabel.TextScaled = true
textLabel.TextWrapped = true
textLabel.TextColor3 = Color3.fromRGB(0, 0, 0)
textLabel.TextXAlignment = Enum.TextXAlignment.Center
textLabel.TextYAlignment = Enum.TextYAlignment.Center
textLabel.Text = [[This script is only works in krnl executor except Delta,
If you're using krnl executor just copy the script then execute

Reason:
This script is not stable on Delta.
Please use Krnl executor if you wish to use the script]]
textLabel.Parent = frame

-- Copy Button
local button = Instance.new("TextButton")
button.Size = UDim2.new(0, 200, 0, 40)
button.Position = UDim2.new(0.5, -100, 1, -60)
button.BackgroundColor3 = Color3.fromRGB(180, 180, 180)
button.Font = Enum.Font.SourceSansBold
button.Text = "Copy Krnl script"
button.TextScaled = true
button.TextColor3 = Color3.fromRGB(0, 0, 0)
button.Parent = frame

-- Corner for button
local buttonCorner = Instance.new("UICorner")
buttonCorner.CornerRadius = UDim.new(0, 8)
buttonCorner.Parent = button

-- Clipboard action
local krnlScript = 'loadstring(game:HttpGet("https://raw.githubusercontent.com/luffy346/Duplicator/refs/heads/main/Script"))()'

button.MouseButton1Click:Connect(function()
	setclipboard(krnlScript)
	button.Text = "Copied!"
	wait(2)
	button.Text = "Copy Krnl script"
end)
